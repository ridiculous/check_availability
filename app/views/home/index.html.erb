<%= link_to('Refresh calendars', home_refresh_path, class: 'btn btn-info', style: 'float: right') %>
<h2>Search</h2>
<div class="well">
  <%= form_tag({}, method: :get, id: 'search_dates') do %>
      <div class="clearfix">
        <div class="field">
          <%= label_tag(:start_date) %>
          <%= text_field_tag(:start_date, @range.start_at.strftime('%m/%d/%Y'), class: 'dp') %>
        </div>
        <div class="field">
          <%= label_tag(:end_date) %>
          <%= text_field_tag(:end_date, @range.stop_at.strftime('%m/%d/%Y'), class: 'dp') %>
        </div>
        <div class="field">
          <%= label_tag(:number_of_people) %>
          <%= number_field_tag(:number_of_people, params[:number_of_people] || 2, style: 'width: 30px;') %>
        </div>
      </div>
      <%= submit_tag('Search', class: 'btn btn-primary', name: nil) %>
      <%= link_to('Clear', home_index_path, class: 'btn') %>
      <p style="margin: 3px 0;">* Calendars automatically refresh every 6 hours</p>
  <% end %>
  <% if @units %>
      <h3 style="margin-top: 5px;padding-top: 5px;border-top: 1px solid #CCC;">Openings</h3>

      <% if @units.any? %>
          <% @units.each do |unit| %>
              <%= link_to(unit.name, unit.calendar_url, class: 'btn btn-large') %>
          <% end %>
      <% else %>
          <h5>Nothing</h5>
      <% end %>
  <% end %>
</div>
